{
  "name": "gunbot-quant-root",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "//─ PRODUCTION & END-USER ───────────────": "",
    "start": "poetry run start",
    "build": "npm run build --prefix gunbot_quant/frontend",

    "//─ DEVELOPMENT ─────────────────────────": "",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "poetry run uvicorn gunbot_quant.api.main:app --reload",
    "dev:frontend": "npm run dev --prefix gunbot_quant/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}